<h3>View Certificate of Origin
  <span class="float-right">
    <%= link_to("View All COs <i class='fi-magnifying-glass'></i>".html_safe, certificates_path, :class => "tiny button") %>
    <%= link_to("Edit This CO <i class='fi-page-edit'></i>".html_safe, edit_certificate_path(@certificate.id), :class => "tiny button") %>
    <%= link_to("View PDF <i class='alert fi-page-export-pdf'></i>".html_safe, certificate_path(@certificate, :format => 'pdf'), :target => "_blank", :class => "tiny alert button") %>
  </span>
</h3>

<div class="details row column">
  <dl class="inline">
    <div class="large-6 columns">
      <dt>Shipper :</dt>
      <dd><%= @certificate.shipper %></dd>
    </div>
    <div class="large-6 columns">
     <dt>Consignee :</dt>
     <dd><%= @certificate.consignee %></dd>
   </div>
   <div class="large-6 columns">
    <dt>Farm :</dt>
    <dd><%= @certificate.farm %></dd>
    </div>
    <div class="large-6 columns">
      <dt>Country :</dt>
      <dd><%= @certificate.country_name %></dd>
    </div>
    <div class="large-6 columns">
      <dt>Departure Port :</dt>
      <dd><%= @certificate.departure_port %></dd>
    </div>
    <div class="large-6 columns">
      <dt>Discharge Port :</dt>
      <dd><%= @certificate.discharge_port %></dd>
    </div>
    <div class="large-6 columns">
      <dt>Mode :</dt>
      <dd><%= @certificate.mode %></dd>
    </div>
    <div class="large-6 columns">
      <dt>Observations :</dt>
      <dd><%= @certificate.observations %></dd>
    </div>
    <hr />
    <div class="large-12 columns">
      <dt>Description :</dt>
      <dd><%= @certificate.description %></dd>
    </div>
    <div class="large-3 columns">
      <dt>Units :</dt>
      <dd><%= @certificate.units %> <%= @certificate.unit_type %></dd>
    </div>
    <div class="large-3 columns">
      <dt>Volume :</dt>
      <dd><%= @certificate.volume %> <%= @certificate.volume_units %></dd>
    </div>
    <div class="large-3 columns">
      <dt>Weight :</dt>
      <dd><%= @certificate.gross_weight %> <%= @certificate.weight_units %></dd>
    </div>
    <div class="large-3 columns">
      <dt>Invoices :</dt>
      <dd><%= @certificate.invoices %></dd>
    </div>
  </dl>
</div>
