<h3>Create New Certificate of Origin</h3>
  <%= form_for @co, validate: true, url: {action: "create"} do |f| %>
  <div class="row">
  <div class="large-6 columns">
    <%= f.label :shipper %>
    <%= f.text_area(:shipper, required: '') %>
  </div>
  <div class="large-6 columns">
    <%= f.label :consignee %>
    <%= f.text_area(:consignee, required: '') %>
  </div>
  <div class="large-6 columns">
    <%= f.label :farm %>
    <%= f.text_field :farm %>
  </div>
  <div class="large-6 columns">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div class="large-4 columns">
    <%= f.label :mode %>
    <%= f.select(:mode, options_for_select([['Ocean / Maritimo', 'Ocean / Maritimo'], ['Land', 'land'], ['Air', 'air'], ['Export', 'export'], ['Import', 'import'], ['Other', 'other']])) %>
  </div>
  <div class="large-4 columns">
    <%= f.label :order %>
    <%= f.collection_select(:order_id, Order.all, :id, :order_for_select) %>
  </div>
  <div class="large-4 columns">
    <div class="input-group">
      <%= f.label :notification %>
      <%= f.collection_select(:notification_id, Notification.all, :id, :name, {}, {:class=>'input-group-field'}) %>
      <div class="input-group-button" style="padding-top: 25px;">
        <%= link_to "New Notify", new_notification_path, class: 'button' %>
      </div>
    </div>
  </div>
  <div class="large-6 columns">
    <%= f.label :departure_port %>
    <%= f.text_field :departure_port, required: '' %>
  </div>
  <div class="large-6 columns">
    <%= f.label :discharge_port %>
    <%= f.text_field :discharge_port, required: '' %>
  </div>
  <div class="large-12 columns">
    <%= f.label :observations %>
    <%= f.text_area(:observations) %>
  </div>
  <hr/>
  <div class="large-6 columns">
    <%= f.label :description %>
    <%= f.text_area :description, required: '' %>
  </div>
  <div class="large-6 columns">
    <%= f.label :invoices %>
    <%= f.text_area :invoices, required: '' %>
  </div>
  <div class="large-2 columns">
    <%= f.label :units %>
    <%= f.number_field :units, required: '' %>
  </div>
  <div class="large-2 columns">
    <%= f.label :unit_type %>
    <%= f.select :unit_type, options_for_select(['Piezas / Pieces','Cajas / Boxes','Trozas / Logs','Bundles']) %>
  </div>
  <div class="large-2 columns">
    <%= f.label :volume %>
    <%= f.number_field :volume, required: '' %>
  </div>
  <div class="large-2 columns">
    <%= f.label :volume_units %>
    <%= f.select :volume_units, options_for_select(['CBM','CBFT']) %>
  </div>
  <div class="large-2 columns">
    <%= f.label :weight %>
    <%= f.number_field :gross_weight, required: '' %>
  </div>
  <div class="large-2 columns">
    <%= f.label :weight_units %>
    <%= f.select :weight_units, options_for_select(['KGS','TONS']) %>
  </div>

    <div class="actions">
      <%= f.submit "Create New Certificate", class: 'button expanded' %>
    </div>
  </div>
<% end %>
