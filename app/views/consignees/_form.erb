<%= simple_form_for @consignee, :html => {'data-abide' => ' ' }, validate: true do |f| %>
  <div class="row">
    <div class="large-4 columns">
      <%= f.input :company %>
    </div>
    <div class="large-4 columns">
      <%= f.input :contact_name %>
    </div>
    <div class="large-4 columns">
      <%= f.input :client do %>
        <%= f.collection_select(:client_id, Client.all, :id, :company, {include_blank: 'Assign a Client'}) %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <%= f.input :email %>
    </div>
    <div class="large-4 columns">
      <%= f.input :telephone %>
    </div>
    <div class="large-4 columns">
      <%= f.input :address %>
    </div>
  </div>
  <div class="row">
    <div class="large-3 columns">
      <%= f.input :city %>
    </div>
    <div class="large-3 columns">
      <%= f.input :state %>
    </div>
    <div class="large-3 columns">
      <%= f.input :country, priority: [ "Costa Rica" ] %>
    </div>
    <div class="large-3 columns">
      <%= f.input :zip %>
    </div>
  </div>
  <div class="actions row">
    <%= f.button :submit, class: 'expanded' %>
  </div>
<% end %>
