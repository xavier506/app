<h3>
  <span class="float-left">
    Viewing Consignee <small>#<%= @consignee.id %></small>
  </span>
  <span class="float-right">
    <% if can? :read, Consignee %>
      <%= link_to("View All Consignees <i class='fi-magnifying-glass'></i>".html_safe, consignees_path, :class => 'tiny button') %>
    <% end %>
    <% if can? :update, @consignee %>
      <%= link_to("Edit Consignee <i class='fi-page-edit'></i>".html_safe, edit_consignee_path(@consignee.id), :class => 'tiny button') %>
    <% end %>
  </span>
</h3>
<div class="details row column">
  <dl class="inline">
  <div class="large-4 columns">
    <dt>Company :</dt>
    <dd><%= @consignee.company %></dd>
  </div>
  <div class="large-4 columns">
   <dt>Contact Name :</dt>
   <dd><%= @consignee.contact_name %></dd>
  </div>
  <div class="large-4 columns">
    <dt>Email :</dt>
    <dd><%= @consignee.email %></dd>
  </div>
  <div class="large-4 columns">
    <dt>Telephone :</dt>
    <dd><%= @consignee.telephone %></dd>
  </div>
  <div class="large-4 columns">
    <dt>Address :</dt>
    <dd><%= @consignee.address %></dd>
  </div>
  <div class="large-4 columns">
    <dt>City :</dt>
    <dd><%= @consignee.city %></dd>
  </div>
  <div class="large-4 columns">
    <dt>State / Province :</dt>
    <dd><%= @consignee.state %></dd>
  </div>
  <div class="large-4 columns">
    <dt>Country :</dt>
    <dd><%= @consignee.country %></dd>
  </div>
  <div class="large-4 columns">
    <dt>Postal Code :</dt>
    <dd><%= @consignee.zip %></dd>
  </div>
  </dl>
</div>
<h4>Associated Users</h4>
<table class="hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
  <% @consignee.users.each do |user| %>
    <tr>
      <td><%= link_to user.id, user_path(user.id) %></td>
      <td><%= link_to user.full_name, user_path(user.id) %></td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>

