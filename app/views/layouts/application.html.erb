<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
  <title><%= content_for?(:title) ? yield(:title) : "PCA Logistica" %></title>
  <meta charset="utf-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/normalize/3.0.3/normalize.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.2.4-rc2/foundation.min.css">
  <%= stylesheet_link_tag    "application" %>
  <script src="https://cdn.jsdelivr.net/modernizr/3.3.1/modernizr.min.js"></script>
</head>

<body>
  <div class="top-bar" id="main-menu">
    <div class="row">
      <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
          <li class="menu-text">PCA Logistica</li>
          <% if current_user && current_user.admin %>
          <li class="has-submenu">
            <%= link_to "Orders", orders_path  %>
            <ul class="submenu menu vertical" data-submenu>
              <li><%= link_to "New Order", new_order_path %></li>
            </ul>
          </li>
          <li class="has-submenu">
            <%= link_to "Clients", clients_path %>
            <ul class="submenu menu vertical" data-submenu>
              <li><%= link_to "New Client", new_client_path %></li>
            </ul>
          </li>
          <li class="has-submenu">
            <%= link_to "Users", users_path  %>
            <ul class="submenu menu vertical" data-submenu>
              <li><%= link_to "New User", new_user_path %></li>
            </ul>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="top-bar-right">
        <ul class="dropdown menu" data-dropdown-menu>
          <%- if current_user %>
          <li class="has-submenu">
            <%= link_to('My account', edit_user_registration_path) %>
            <ul class="submenu menu vertical" data-submenu>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            </ul>
          </li>
          <%- else %>
          <li><%= link_to "Login", new_user_session_path %></li>
          <%- end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="row columns">
    <main role="main">
      <%= yield %>
    </main>
  </div>
  <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
  <script src="https://cdn.jsdelivr.net/foundation/6.2.4-rc2/foundation.min.js"></script>
  <script>
    $(document).foundation();
  </script>
</body>
</html>
