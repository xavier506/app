<h3>
  <span class="float-left">
    Viewing Order <small>#<%= @order.id %></small>
  </span>
  <span class="float-right">
    <% if can? :read, @order %>
      <%= link_to("View All Orders <i class='fi-magnifying-glass'></i>".html_safe, orders_path, :class => 'tiny button') %>
    <% end %>
    <% if can? :update, @order %>
      <%= link_to("Edit This Order <i class='fi-page-edit tiny'></i>".html_safe, edit_order_path(@order.id), :class => 'tiny button') %>
    <% end %>
  </span>
</h3>
<div class="details row column">
  <dl class="inline">
  <div class="large-6 columns">
    <dt>Client :</dt>
    <dd><%= @order.client.company %></dd>
  </div>
  <div class="large-6 columns">
   <dt>Order Date :</dt>
   <dd><%= @order.order_date %></dd>
  </div>
  <div class="large-6 columns">
    <dt>Mode :</dt>
    <dd><%= @order.mode %></dd>
  </div>
  <div class="large-6 columns">
    <dt>Status :</dt>
    <dd><%= @order.status %></dd>
  </div>
  <div class="large-12 columns">
    <dt>Notes :</dt>
    <dd><%= @order.notes %></dd>
  </div>
  </dl>
</div>
<br/>
<div class="row column">
  <h4>Associated Certificate of Origins</h4>
  <table class="hover">
    <thead>
      <th>#</th>
      <th>Shipper</th>
      <th>Mode</th>
      <th>Departure</th>
      <th>Discharge</th>
      <th>Actions</th>
    </thead>
    <tbody>
    <% @order.certificates.each do |co| %>
      <tr>
        <td><%= link_to co.id, order_path(co.id) %></td>
        <td><%= co.shipper %></td>
        <td><%= co.mode %></td>
        <td><%= co.departure_port %></td>
        <td><%= co.discharge_port %></td>
        <td nowrap>
          <% if can? :read, Certificate %>
            <%= link_to '<i class="show fi-magnifying-glass"></i>'.html_safe, certificate_path(co.id), :title => t('certificates.show.hover_title') %>
          <% end %>
          <% if can? :update, Certificate %>
            <%= link_to '<i class="edit fi-page-edit"></i>'.html_safe, edit_certificate_path(co.id), :title => t('certificates.edit.hover_title') %>
          <% end %>
          <% if can? :destroy, Certificate %>
            <%= link_to '<i class="delete fi-x"></i>'.html_safe, certificate_path(co.id),method: :delete, data: { confirm: "Are you sure?" }, :title => t('certificates.destroy.hover_title') %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% if can? :create, Certificate %>
    <%= link_to("New CO <i class='fi-plus'></i>".html_safe, new_certificate_path, :class => "button float-right" ) %>
  <% end %>
</div>

<div class="row column">
  <h4>Associated Phytosanitaries</h4>
  <table class="hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Number</th>
      <th>Exporter</th>
      <th>Consignee</th>
      <th>Mode</th>
      <th>Point of Exit</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @order.phytosanitaries.each do |phyto| %>
    <tr>
      <td><%= link_to phyto.id, phytosanitary_path(phyto.id) %></td>
      <td><%= phyto.number %></td>
      <td><%= phyto.exporter %></td>
      <td><%= phyto.consignee %></td>
      <td><%= phyto.mode %></td>
      <td><%= phyto.point_of_exit %></td>
      <td nowrap>
        <% if can? :read, phyto %>
          <%= link_to '<i class="show fi-magnifying-glass"></i>'.html_safe, phytosanitary_path(phyto.id), :title => t('phytosanitaries.show.hover_title') %>
        <% end %>
        <% if can? :update, phyto %>
          <%= link_to '<i class="edit fi-page-edit"></i>'.html_safe, edit_phytosanitary_path(phyto.id), :title => t('phytosanitaries.edit.hover_title') %>
        <% end %>
        <% if can? :destroy, phyto %>
          <%= link_to '<i class="delete fi-x"></i>'.html_safe, phytosanitary_path(phyto.id),method: :delete, data: { confirm: "Are you sure?" }, :title => t('phytosanitaries.destroy.hover_title') %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% if can? :create, Phytosanitary %>
  <%= link_to("New Phyto <i class='fi-plus'></i>".html_safe, new_phytosanitary_path, :class => "button float-right" ) %>
<% end %>
</div>

