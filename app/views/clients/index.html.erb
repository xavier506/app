<h4 class="text-center">Registered Clients</h4>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Company</th>
      <th>Contact Name</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @clients.each do |client| %>
    <tr>
      <td><%= link_to client.id, client_path(client.id) %></td>
      <td><%= client.company %></td>
      <td><%= client.contact_name %></td>
      <td><%= client.email %></td>
      <td><%= client.telephone %></td>
      <td><%= link_to "Edit", edit_client_path(client.id) %> | <%= link_to "Delete", client_path(client.id),method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New Client", new_client_path %>
