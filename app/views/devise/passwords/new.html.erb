<div class="row">
  <div class="large-6 large-centered column">
    <div class="row column">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="log-in-form">
        <h4 class="text-center">Forgot your password?</h4>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: 'enter your email address' %>
        </div>
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'button expanded' %>
        </div>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
