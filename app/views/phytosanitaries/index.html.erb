  <h3>Phytosanitary Certificates</h3>
<table class="hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Number</th>
      <th>Exporter</th>
      <th>Consignee</th>
      <th>Mode</th>
      <th>Point of Exit</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @phytosanitaries.each do |phyto| %>
  <% phyto_path = polymorphic_path([@order, phyto]) %>

    <tr>
      <td><%= link_to phyto.id, phyto_path %></td>
      <td><%= phyto.number %></td>
      <td><%= phyto.exporter %></td>
      <td><%= phyto.receiver %></td>
      <td><%= phyto.mode %></td>
      <td><%= phyto.point_of_exit %></td>
      <td nowrap>
        <% if can? :read, phyto %>
          <%= link_to '<i class="show fi-magnifying-glass"></i>'.html_safe, order_phytosanitary_path(@order, phyto), :title => t('phytosanitaries.show.hover_title') %>
        <% end %>
        <% if can? :update, phyto %>
          <%= link_to '<i class="edit fi-page-edit"></i>'.html_safe, edit_order_phytosanitary_path(@order, phyto), :title => t('phytosanitaries.edit.hover_title') %>
        <% end %>
        <% if can? :destroy, phyto %>
          <%= link_to '<i class="delete fi-x"></i>'.html_safe, order_phytosanitary_path(@order, phyto),method: :delete, data: { confirm: "Are you sure?" }, :title => t('phytosanitaries.destroy.hover_title') %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
