<h3>Edit Notification</h3>
<%= form_for @notify, url: {action: "update"} do |f| %>
<div class="row">
  <div class="large-12 columns">
    <%= f.label :name %>
    <%= f.text_field(:name) %>
  </div>
  <div class="large-12 columns">
    <%= f.label :description %>
    <%= f.text_area(:description) %>
  </div>
  <div class="actions">
    <%= f.submit "Save Notification", class: 'button expanded' %>
  </div>
</div>
<% end %>
