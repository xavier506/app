<h3>View User #<%= @user.id %>
  <span class="float-right">
  <% if can? :update, @user %>
    <%= link_to("Edit User <i class='fi-page-edit'></i>".html_safe, edit_user_path(@user.id), :class => 'tiny button') %>
  <% end %>
  </span>
</h3>
<div class="details row column">
  <dl class="inline">
  <div class="large-12 columns">
    <dt>Email :</dt>
    <dd><%= @user.email %></dd>
  </div>
  <div class="large-6 columns">
   <dt>User is Admin :</dt>
   <dd><%= @user.admin? %></dd>
  </div>
  <div class="large-6 columns">
    <dt>Sign-in Count :</dt>
    <dd><%= @user.sign_in_count %></dd>
  </div>
  <div class="large-6 columns">
    <dt>Last Sign-in :</dt>
    <dd><%= @user.last_sign_in_at %></dd>
  </div>
  <div class="large-6 columns">
    <dt>Last Sign-in IP :</dt>
    <dd><%= @user.last_sign_in_ip %></dd>
  </div>
  <div class="large-12 columns">
    <dt>Date Registered :</dt>
    <dd><%= @user.created_at %></dd>
  </div>
  </dl>
</div>
