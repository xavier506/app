<h3>Create a New User </h3>
<div class="form-container">
  <%= simple_form_for @user, validate: true do |f| %>
  <div class="row column">
    <%= f.input :full_name, label: 'Full name' %>
    <%= f.input :email, label: 'Email', error: 'Username is mandatory, please specify one' , placeholder: 'user@domain.com' %>
    <%= f.input :password %>
    <% if current_user.admin? %>
      <%= f.input :admin,  as: :boolean, checked_value: true, unchecked_value: false, label: 'User is an Administrator' %>
      <%= f.input :client_id do %>
        <%= f.collection_select(:client_id, Client.all, :id, :company, {include_blank: 'Assign a Client'}, {:class=>'input-group-field'}) %>
      <% end %>
    <% end %>
    <br/>
    <%= f.button :submit, class: 'expanded' %>
  </div>
<% end %>
</div>
